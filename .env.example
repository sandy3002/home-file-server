# Environment Variables for Home File Server
# Copy this file to .env and fill in your actual values

# Flask Secret Key - Used for session encryption and security
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Upload Folder (optional, defaults to ~/Documents/FileServer)
# UPLOAD_FOLDER=/path/to/your/uploads
