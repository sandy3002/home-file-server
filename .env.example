# Environment Variables for Home File Server
# Copy this file to .env and fill in your actual values

# Flask Secret Key - Used for session encryption and security
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this

# MongoDB Connection String
# Local: mongodb://localhost:27017/
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/

# File Storage Location
# For Ubuntu production: /home/yourusername/fileserver-data
# For Docker: /app/data
UPLOAD_FOLDER=/home/yourusername/fileserver-data

# Application Settings
FLASK_ENV=production
HOST=127.0.0.1
PORT=8080

# Maximum file size (in bytes)
# 1GB = 1073741824
# 5GB = 5368709120
# 10GB = 10737418240
MAX_CONTENT_LENGTH=10737418240
